<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.powempresas.rest.MainActivity"
    android:isScrollContainer="true"
    android:minWidth="1500px"
    android:overScrollMode="ifContentScrolls"
    android:persistentDrawingCache="scrolling"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local: "
        android:id="@+id/local" />

    <TextView
        android:text="Aguardando..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/local"
        android:layout_marginStart="13dp"
        android:id="@+id/inputLocal" />

    <TextView
        android:text="Filtro:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/local"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/valoresFiltro" />

    <TextView
        android:text="Resposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valoresFiltro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:id="@+id/resposta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conexao"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Set Dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getDados"
        android:elevation="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
